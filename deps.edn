{:deps    {org.clojure/clojure                 {:mvn/version "1.11.1"}

           ;; logging
           com.taoensso/timbre                 {:mvn/version "5.2.1"}
           com.fzakaria/slf4j-timbre           {:mvn/version "0.3.21"}

           ;; system/config management
           integrant/integrant                 {:mvn/version "0.8.0"}
           integrant/repl                      {:mvn/version "0.3.2"}
           aero/aero                           {:mvn/version "1.1.6"}

           ;; HTTP
           http-kit/http-kit                   {:mvn/version "2.5.3"}
           metosin/reitit                      {:mvn/version "0.5.17"}
           ring/ring-core                      {:mvn/version "1.9.5"}
           ring/ring-headers                   {:mvn/version "0.3.0"}
           ring/ring-defaults                  {:mvn/version "0.3.3"}
           martian/martian                     {:mvn/version "0.1.16"}

           ;; JSON
           metosin/jsonista                    {:mvn/version "0.3.5"}
           camel-snake-kebab/camel-snake-kebab {:mvn/version "0.4.2"}

           ;; Database
           com.xtdb/xtdb-core                  {:mvn/version "1.20.0"}
           com.xtdb/xtdb-rocksdb               {:mvn/version "1.20.0"}

           ;; validation/modelling
           metosin/malli                       {:mvn/version "0.8.4"}

           ;; testing
           ;; utility for generative testing
           com.gfredericks/test.chuck          {:mvn/version "0.2.13"}

           ;; async
           funcool/promesa                     {:mvn/version "8.0.450"}}
 :paths   ["src" "resources"]
 :aliases {:run-m   {:main-opts ["-m" "co.syncify.api.main"]}
           :dev     {:extra-paths ["dev/src" "dev/resources" "test"]}
           :test    {:extra-paths ["test"]
                     :extra-deps  {lambdaisland/kaocha           {:mvn/version "1.0.861"}
                                   lambdaisland/kaocha-cloverage {:mvn/version "1.0.75"}
                                   org.clojure/test.check        {:mvn/version "1.1.0"}
                                   ring/ring-mock                {:mvn/version "0.4.0"}
                                   http-kit.fake/http-kit.fake   {:mvn/version "0.2.2"}}}
           :uberjar {:replace-deps {com.github.seancorfield/depstar {:mvn/version "2.0.211"}}
                     :exec-fn      hf.depstar/uberjar
                     :exec-args    {:aot        true
                                    :jar        "target/syncify-api.jar"
                                    :main-class "co.syncify.api.main"}}}}
